{
    "manifest_version": 2,
    "name": "Adoption Lead",
    "version": "1.0",
    "description": "Leading your Software Adoption with smart Tips and Smart XP ",
    "icons": {
        "128": "/icons/icon128.png",
        "48": "/icons/icon48.png",
        "16": "/icons/icon16.png"
    },

    "browser_action": {
        "default_icon": "/icons/icon48.png",
        "default_popup": "/views/login.html"
    },

    "background": {
        "scripts": ["/scripts/background.js"],
        "persistent": false
    },
    
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "tabs",
        "webNavigation"
    ]
}
